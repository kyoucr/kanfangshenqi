<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_white">

    <RelativeLayout
        android:id="@+id/rltContent"
        android:layout_height="68dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imgIcon"
            style="@style/item"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/redhouse_icon" />

        <LinearLayout
            style="@style/match"
            android:layout_toRightOf="@id/imgIcon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtMoney"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/txt_color_black"
                android:textSize="@dimen/txt_size_big" />

            <TextView
                android:id="@+id/txtSource"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/txt_little_normal" />
        </LinearLayout>
    </RelativeLayout>
	<View android:id="@+id/viewBottom"
	    android:layout_below="@id/rltContent"
	    android:visibility="gone"
	    style="@style/cut_line"/>
</RelativeLayout>