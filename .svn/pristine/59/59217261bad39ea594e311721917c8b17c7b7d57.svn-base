<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/layout"
        android:background="@drawable/bg_ctrl_item" >

        <com.xinwei.kanfangshenqi.view.CircleImageViewWithBorder
            android:id="@+id/imgHead"
            android:layout_width="@dimen/see_house_circle_img_head_size"
            android:layout_height="@dimen/see_house_circle_img_head_size"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/not_logged_in_headpic" />

        <LinearLayout
            style="@style/layout"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_toRightOf="@id/imgHead"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/layout"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtName"
                    style="@style/item"
                    android:textColor="@color/txt_color_black"
                    android:textSize="@dimen/txt_size_big" />

                <TextView
                    style="@style/item"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="@string/txt_reply_your_discuss"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/txt_size_big" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtContent"
                style="@style/layout"
                android:layout_marginTop="@dimen/margin_normal"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/txt_color_black"
                android:textSize="@dimen/txt_size_big" />

            <RelativeLayout
                style="@style/layout"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal" >

                <TextView
                    android:id="@+id/txtTime"
                    style="@style/item"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/txt_size_normal" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>