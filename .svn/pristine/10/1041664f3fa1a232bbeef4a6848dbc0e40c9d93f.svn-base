<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout style="@style/layout"
        android:background="@drawable/bg_ctrl_item" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/img_publish_width"
            android:layout_height="@dimen/img_publish_height"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/item_unpublish_height"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:layout_marginRight="@dimen/margin_normal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/txt_color_black"
                android:textSize="@dimen/txt_size_big" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/txt_size_normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>