<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    tools:context=".Tao_F" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#ccff441f"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_bao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/nav_red_packet_icon" />

        <LinearLayout
            android:id="@+id/ll_top_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight="5"
            android:background="@drawable/action_bar_ditu"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/xjhb_search" />

            <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="请输入楼盘名称"
                android:textColor="@color/text_gray_input"
                android:textSize="@dimen/txt_size_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/nav_listicon" />
    </LinearLayout>

</RelativeLayout>