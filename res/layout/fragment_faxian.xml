<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        style="@style/match"
        android:orientation="vertical" >

        <ImageView
            style="@style/cut_line"
            android:layout_marginTop="@dimen/margin_normal" />

        <LinearLayout
            android:id="@+id/lltSeeHouseCircle"
            style="@style/ctrl_item"
            android:orientation="horizontal" >

            <ImageView
                style="@style/img_ctrl_item"
                android:background="@drawable/seehouse_icon" />

            <TextView
                style="@style/txt_ctrl_item"
                android:layout_gravity="center_vertical"
                android:text="@string/see_house_circle" />

            <RelativeLayout
                android:id="@+id/rltNew"
                android:visibility="gone"
                style="@style/match" >

                <com.xinwei.kanfangshenqi.view.XCRoundRectImageView
                    android:id="@+id/imgHead"
                    android:layout_width="@dimen/head_item_icon_size"
                    android:layout_height="@dimen/head_item_icon_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:src="@drawable/ic_head_new_msg" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignRight="@id/imgHead"
                    android:layout_alignTop="@id/imgHead"
                    android:layout_marginRight="-3dp"
                    android:layout_marginTop="-3dp"
                    android:background="@drawable/redpoint" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            style="@style/cut_line"
            android:layout_marginBottom="@dimen/margin_normal" />

        <ImageView style="@style/cut_line" />

        <LinearLayout
            android:id="@+id/lltEncyclopedia"
            style="@style/ctrl_item"
            android:orientation="horizontal" >

            <ImageView
                style="@style/img_ctrl_item"
                android:background="@drawable/encyclopedia_icon" />

            <TextView
                style="@style/txt_ctrl_item"
                android:layout_gravity="center_vertical"
                android:text="@string/encyclopedia" />
        </LinearLayout>

        <ImageView style="@style/cut_line" />

        <LinearLayout
            android:id="@+id/lltSeeHouseTools"
            style="@style/ctrl_item"
            android:orientation="horizontal" >

            <ImageView
                style="@style/img_ctrl_item"
                android:background="@drawable/tools_icon" />

            <TextView
                style="@style/txt_ctrl_item"
                android:layout_gravity="center_vertical"
                android:text="@string/see_house_tools" />
        </LinearLayout>

        <ImageView style="@style/cut_line" />

        <LinearLayout
            android:id="@+id/lltWonderfulActivity"
            style="@style/ctrl_item"
            android:orientation="horizontal" >

            <ImageView
                style="@style/img_ctrl_item"
                android:background="@drawable/activities_icon" />

            <TextView
                style="@style/txt_ctrl_item"
                android:layout_gravity="center_vertical"
                android:text="@string/wonderful_activity" />
        </LinearLayout>

        <ImageView style="@style/cut_line" />
    </LinearLayout>

</ScrollView>