<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <solid android:color="@color/btn_orange_pressed"></solid>
        </shape>
     </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <solid android:color="@color/btn_orange_pressed"></solid>
        </shape>
       
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <solid android:color="@color/btn_orange_pressed"></solid>
        </shape>
       
    </item>
    <item>
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <solid android:color="@color/btn_orange_normal"></solid>
        </shape>
        
   </item>

</selector>